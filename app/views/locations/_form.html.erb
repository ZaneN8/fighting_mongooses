<form class="form">
<h1><%= @location.id ? 'Edit Location' : 'Create Location' %></h1>


<%= form_with(model:[@trip,@location], local: true, class: "form") do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Location Name" %>
    <%= f.submit nil, class: "btn btn-primary" %>
<% end %>
<%= link_to "Back", trip_locations_path(@location.trip), class:"btn btn-success" %>

</form>