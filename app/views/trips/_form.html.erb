<div class="container">
<%= form_with(model: @trip, local: true, class: "form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Trip Name" %>
  </div>
  <%= f.submit nil, class: "green" %>
<% end %>
<%= link_to "Back", trip_locations_path(trip) %>
</div>