<h1><%= @address.id ? 'Edit Address' : 'Create New Address' %></h1>


<%= form_with(model:[@location, @address], local: true, class: "form") do |f| %>

    <%= f.label :street %>
    <%= f.text_field :street, required: true, placeholder: "Street name" %>
    <%= f.label :state %>
    <%= f.text_field :state, required: true, placeholder: "State name" %>
    <%= f.label :city %>
    <%= f.text_field :city, required: true, placeholder: "City name" %>
    <%= f.label :country %>
    <%= f.text_field :country, required: true, placeholder: "Country name" %>
    <%= f.label :region %>
    <%= f.text_field :region, required: true, placeholder: "Country name" %>
    <%= f.label :zip %>
    <%= f.number_field :zip, required: true, placeholder: "Country name" %>
    <%= f.submit nil, class: "btn btn-primary" %>
<% end %>